    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SilverlightApplication.Controls"
    xmlns:primitives="clr-namespace:SilverlightApplication.Controls.Primitives"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
