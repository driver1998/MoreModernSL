                                            x:Name="CheckGlyph"
                                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                                            FontSize="{StaticResource CheckBoxGlyphSize}"
                                            Foreground="{StaticResource TextOnAccentFillColorPrimaryBrush}"
                                            Glyph="{StaticResource CheckBoxCheckedGlyph}"
